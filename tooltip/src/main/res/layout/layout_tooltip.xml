<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_arrow_top_btn"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="-8dp"
        android:background="@drawable/ic_tootip_top_arrow"/>

    <!--android:layout_marginRight="38dp"-->
    <RelativeLayout
        android:id="@+id/id_relative_tootip_box_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:background="@drawable/pc26_round_box">

        <TextView
            android:id="@+id/mLabel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:lineSpacingExtra="-0.02dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"

            android:paddingBottom="2dp"
            android:text="@string/label_ready_alarm_tooltip_1"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="12dp"
            android:id="@+id/relative_alarm_tooltip_close_layout"
            android:layout_below="@+id/mLabel_1">

            <ImageView
                android:id="@+id/img_tooltip_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingTop="2dp"
                android:paddingRight="3dp"
                android:src="@drawable/tooltip_close2"
                android:text=""
                android:textColor="#F2F2F2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/img_tooltip_close_btn"
                android:includeFontPadding="false"
                android:lineSpacingExtra="-0.02dp"
                android:text="@string/label_ready_alarm_tooltip_bottom"
                android:textColor="@color/light_gray_alarm_on"
                android:textSize="12dp"/>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>